<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f2d1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gurchetansingh.fullactivity.LastActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="63dp"
        android:gravity="center"
        android:textColor="#000000"
        android:text="Thank You for attempting the Quiz."
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="85dp"
        android:text="Your Score :"
        android:textColor="#000000"
        android:textSize="40dp"
        android:id="@+id/finalscore" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rect2"
        android:layout_below="@+id/finalscore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:text="Try Again"

        android:id="@+id/tryagain" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rect2"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:text="Exit"
        android:id="@+id/exit"
        android:layout_below="@+id/tryagain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />
</RelativeLayout>
